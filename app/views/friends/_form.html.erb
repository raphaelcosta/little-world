<%= simple_form_for @friend, :html => { :class => 'form-horizontal' } do |f| %>


  <%= f.input :name, :input_html => { :class => "span6" } %>
  <%= f.input :latitude, :input_html => { :class => "span3" } %>
  <%= f.input :longitude, :input_html => { :class => "span3" } %>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                friends_path, :class => 'btn' %>
  </div>
<% end %>
